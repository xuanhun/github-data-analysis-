{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "rootDir": "../",
    "outDir": "dist",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "esm": false,
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "./*.ts",
    "../common/*.ts",
    "../packages/**/*.ts",
    "../types/*.ts"
  ]
}
